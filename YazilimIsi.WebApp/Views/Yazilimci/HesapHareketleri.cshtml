@model IEnumerable<YazilimIsi.Entity.Models.AccountActivity>
@{
    ViewData["Title"] = "HesapHareketleri";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div classNedir="bradcam_text">
                    <h3>Bütün Hesap Hareketlerin</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ bradcam_area  -->
<!-- featured_candidates_area_start  -->
<div class="featured_candidates_area candidate_page_padding">
    <div class="container">

        <div class="card text-center">
            <div class="card-body">
                <h3>Bütün Hesap Hareketlerin</h3>
                <hr />
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped table-responsive-sm">
                        <thead>
                            <tr>
                                <th scope="col">Numara</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Miktar</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.Id</th>
                                    <td>
                                        @if (item.Title.Length > 30)
                                        {
                                            @item.Title.Substring(0, 29) <span>...</span>
                                        }
                                        else
                                        {
                                            @item.Title
                                        }
                                    </td>
                                    <td>@Convert.ToDateTime(item.CreatedDate).ToShortDateString()</td>
                                    <td>
                                        @if (item.IsIncrease == true)
                                        {
                                            <span style="color:green;">+</span>
                                        }
                                        else
                                        {
                                            <span style="color:red;">-</span>
                                        }
                                    </td>
                                    <td>@item.Money TL</td>
                                    <td>
                                        <a href="/Yazilimci/HesapHareketDetay/@item.Id" class="btn btn-outline-info btn-sm">İncele</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Hesap Hareketi Bulunamadı</p>
                }
            </div>
        </div>

    </div>
</div>
<!-- featured_candidates_area_end  -->
