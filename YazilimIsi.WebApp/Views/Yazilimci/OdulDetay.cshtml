@model YazilimIsi.Entity.Models.Award
@{
    ViewData["Title"] = "OdulDetay";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div classNedir="bradcam_text">
                    <h3>Ödül Detayı İnceleme</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ bradcam_area  -->
<!-- featured_candidates_area_start  -->
<div class="featured_candidates_area candidate_page_padding">
    <div class="container">

        <div class="card text-center">
            <div class="card-body">
                <h3>Ödül Detayı</h3>
                <hr />
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>Ödül Başlık</td>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <td>Ödül Verilme Tarihi</td>
                            <td>@Model.Date</td>
                        </tr>
                        <tr>
                            <td>Ödül Alan Geliştirici</td>
                            <td>@Model.Developer.Name @Model.Developer.Surname</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <div class="card text-center">
            <div class="card-body">
                <h3>Ödül Açıklama Yazısı</h3>
                <hr />
                <p>@Model.Description</p>
            </div>
        </div>
        <br />
        <div class="card text-center">
            <div class="card-body">
                <h3>İşlemler</h3>
                <hr />
                <a href="" data-toggle="modal" data-target="#modalOdulDuzenle" class="genric-btn info-border">Ödül Düzenle</a><br /><br />
                <a href="/Yazilimci/OdulSil/@Model.Id" class="genric-btn danger-border">Ödül Sil</a><br /><br />
            </div>
        </div>

    </div>
</div>
<!-- featured_candidates_area_end  -->
<!-- Modal -->
<div class="modal fade" id="modalOdulDuzenle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ödül Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu Ödülü Gerçekten Düzenlemek İstiyor Musun?
            </div>
            <div class="modal-footer">
                <div class="container">
                    <form asp-controller="Yazilimci" asp-action="OdulDuzenle" asp-route-Id="@Model.Id" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input asp-for="Title" type="text" class="form-control" value="@Model.Title" required />
                        </div>
                        <div class="form-group">
                            <input asp-for="Date" type="text" class="form-control" value="@Model.Date" required />
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Description" class="form-control" rows="6" minlength="10" required>@Model.Description</textarea>
                        </div>
                        <button type="button" class="genric-btn danger" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="genric-btn info">Ödül Düzenle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

