@model IEnumerable<YazilimIsi.Entity.Models.Blog>
@{
    ViewData["Title"] = "IsVerenBlog";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div classNedir="bradcam_text">
                    <h3>İş Veren Blog</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ bradcam_area  -->
<!-- featured_candidates_area_start  -->
<div class="featured_candidates_area candidate_page_padding">
    <div class="container">
        @if (Model.Count() > 0)
        {

            <div class="row">
                <div class="col-md-4">

                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="card-header">
                                @item.Title
                            </div>
                            <div class="card-body">
                                @item.Category
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p>Henüz Yazı Eklenmemiş...</p>
        }
    </div>
</div>
<!-- featured_candidates_area_end  -->
